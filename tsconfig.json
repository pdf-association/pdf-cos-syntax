{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "out",
    "rootDirs": [
      "./client/src",
      "./server/src"
    ],
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true
  }
}