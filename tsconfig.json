{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "out",
    "rootDirs": [
      "./client/src",
      "./server/src"
    ],
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": [
    "eslint.config.mjs",
    "./server/src/grammar/*.d.ts", 
    "./server/src/grammar/*bundle.ts", 
    "./out/**"
  ]
}